<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Untitled Document</title>

<style>
#enemy
{
	width:100px;
	position:absolute;
	top:150px;
	left:400px;
}
</style>


<script>

function onload()
{
  document.getElementById('enemy').style.top = '10px';
}

//alert(   Math.random()*100   );

function catchme()
{
	var randomtop = Math.random()*400;
	var randomleft = Math.random()*400;
	
	document.getElementById('enemy').style.top = randomtop+'px';
	document.getElementById('enemy').style.left = randomleft+'px';
}

</script>


</head>

<body onLoad="onload()">

<img onMouseOver="catchme()" id="enemy" src="tels.jpg" />

</body>
</html>
